<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:text="Trieur" />

        <ToggleButton
            android:id="@+id/select_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Select" />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/parent_folder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button"
            android:src="@drawable/ic_arrow_up"/>
        
        <Button
            android:id="@+id/new_page"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/new_page" />
        
        <Button
            android:id="@+id/new_folder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/new_folder" />
        <ImageButton
             android:id="@+id/connectftp"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:background="@drawable/button"
             android:src="@drawable/ic_connect_off" />
        
         <ImageButton
             android:id="@+id/settings_button"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_gravity="right"
             android:background="@drawable/button"
             android:src="@drawable/ic_settings" />

    </LinearLayout>

    <com.gabapps.student.FilesView
        android:id="@+id/filesView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </com.gabapps.student.FilesView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/pastelayout">

        <Button
            android:id="@+id/paste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coller" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Annuler" />
    </LinearLayout>

</LinearLayout>
